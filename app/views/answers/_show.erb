
<label for="answer">Answer: </label><br>
  <li class="list-answer"><%= answer.text %> <%= answer.vote_count %></li>

   <form action="/answers/<%= answer.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete">
  </form>

  <form class="comment" action="/answers/<%= answer.id %>/comments" method="POST">
    <label for="comment">Comment:</label>
    <input type="text" name="comment" placeholder="Comment">
    <br>
    <input type="submit" value="Submit">
  </form>

  <ul class="comment-list">
    <label for="comment">Comment: </label>
    <% answer.comments.each do |comment_to_show| %>
    <%= erb :"/comments/_show", layout: false, locals: { comment: comment_to_show } %>
    <% end %>
  </ul>