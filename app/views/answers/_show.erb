<label for="answer">Answer: </label>
  <li class="list-answer"><%= answer.text %></li>

  <form action="/answers/<%= answer.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input class="button" type="submit" value="Delete">
  </form><br>

  <form action='/answers/<%= answer.id %>/upvote' method="POST">
      <button class="fa fa-thumbs-up inline" type="submit" name="answer_vote" value="upvote_points"></button>
  </form>

  <form action='/answers/<%= answer.id %>/downvote' method="POST">
    <button class="fa fa-thumbs-down inline" type="submit" name="answer_vote" value="downvote_points"></button>
  </form>

  Score: <%= answer.vote_count %>

  <form class="comment" action="/answers/<%= answer.id %>/comments" method="POST">
    <label for="comment">Comment:</label>
    <input type="text" name="comment" placeholder="Comment">
    <br>
    <input class="button" type="submit" value="Submit">
  </form>

  <ul class="comment-list">
    <label for="comment">Comment: </label>
    <% answer.comments.each do |comment_to_show| %>
    <%= erb :"/comments/_show", layout: false, locals: { comment: comment_to_show } %>
    <% end %>
  </ul>